<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_library_rental_tree" model="ir.ui.view">
            <field name="name">library.rental.tree</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental" decoration-danger="not return_date and planned_return_date&lt;current_date">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="book_id"/>
                    <field name="copy_id"/>
                    <field name="rental_date"/>
                    <field name="return_date"/>
                    <field name="planned_return_date"/>
                    <field name="customer_address"/>
                    <field name="customer_email"/>
                    <field name="book_author_ids"/>
                    <field name="book_edition_date"/>
                    <field name="book_publisher_id"/>
                </tree>
            </field>
        </record>

        <record id="view_library_rental_form" model="ir.ui.view">
            <field name="name">library.rental.form</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <form string="Rental">
                    <header>
                        <button name="action_confirm" type="object" class="btn btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}" string="Confirm"/>
                        <button name="action_return" type="object" class="btn btn-primary"
                                attrs="{'invisible': [('state', '!=', 'rented')]}" string="Return"/>
                        <button name="action_lost" type="object" class="btn btn-primary"
                                attrs="{'invisible': [('state', '!=', 'rented')]}" string="Lost"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="customer_id" domain="[('partner_type', '=', 'customer')]"/>
                            <field name="book_id"/>
                            <field name="copy_id"/>
                            <field name="rental_date"/>
                            <field name="return_date"/>
                            <field name="customer_address"/>
                            <field name="customer_email"/>
                            <field name="book_author_ids"/>
                            <field name="book_edition_date"/>
                            <field name="book_publisher_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="open_view_library_rental_list" model="ir.actions.act_window">
            <field name="name">Rental</field>
            <field name="res_model">library.rental</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
<!--            <field name="search_view_id" ref="view_library_publisher_filter"/>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new rental
                </p>
            </field>
        </record>

        <menuitem
            id="menu_rental_main"
            name="Rental"
            parent="menu_open_library_root"
            groups="base.group_user"
            sequence="10"/>

            <menuitem
                id="menu_view_rental"
                name="Rental"
                action="open_view_library_rental_list"
                parent="menu_rental_main"
                sequence="0"/>

    </data>
</odoo>