<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_library_copy_tree" model="ir.ui.view">
            <field name="name">library.copy.tree</field>
            <field name="model">library.copy</field>
            <field name="arch" type="xml">
                <tree string="Copy">
                    <field name="book_id"/>
                    <field name="reference"/>
                    <field name="rental_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_library_copy_form" model="ir.ui.view">
            <field name="name">library.copy.form</field>
            <field name="model">library.copy</field>
            <field name="arch" type="xml">
                <form string="Copy">
                    <header>
                        <field name="book_state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="_readers_this_book" name="open_readers" type="object" icon="fa-users">
                                <field string="Readers of this book" name="readers_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group col="4">
                            <group>
                                <field name="book_id"/>
                                <field name="reference"/>
                            </group>
                            <field name="rental_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="open_view_library_copy_list" model="ir.actions.act_window">
            <field name="name">Copy</field>
            <field name="res_model">library.copy</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <!--            <field name="search_view_id" ref="view_library_publisher_filter"/>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new copy
                </p>
            </field>
        </record>

        <menuitem
            id="menu_copy_main"
            name="Copy"
            parent="menu_open_library_root"
            groups="base.group_user"
            sequence="20"/>

            <menuitem
                id="menu_view_copy"
                name="Copy"
                action="open_view_library_copy_list"
                parent="menu_copy_main"
                sequence="0"/>

    </data>
</odoo>