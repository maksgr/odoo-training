<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_library_publisher_tree" model="ir.ui.view">
            <field name="name">library.publisher.tree</field>
            <field name="model">library.publisher</field>
            <field name="arch" type="xml">
                <tree string="Publisher">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_library_publisher_form" model="ir.ui.view">
            <field name="name">library.publisher.form</field>
            <field name="model">library.publisher</field>
            <field name="arch" type="xml">
                <form string="Publisher">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="open_view_library_publisher_list" model="ir.actions.act_window">
            <field name="name">library_publisher</field>
            <field name="res_model">library.publisher</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
<!--            <field name="search_view_id" ref="view_library_publisher_filter"/>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new publisher
                </p>
            </field>
        </record>

        <menuitem
            id="menu_publisher_main"
            name="Publisher"
            parent="menu_open_library_root"
            groups="base.group_user"
            sequence="15"/>

            <menuitem
                id="menu_view_publisher"
                name="publisher"
                action="open_view_library_publisher_list"
                parent="menu_publisher_main"
                sequence="0"/>

    </data>
</odoo>