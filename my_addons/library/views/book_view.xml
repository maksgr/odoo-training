<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_book_tree" model="ir.ui.view">
            <field name="name">library.book.tree</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree string="Book">
                    <field name="name"/>
                    <field name="author_ids"/>
                    <field name="edition_date"/>
                    <field name="isbn"/>
                    <field name="publisher_id"/>
                    <field name="rental_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_book_form" model="ir.ui.view">
            <field name="name">library.book.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="author_ids" domain="[('partner_type', '=', 'author')]"/>
                            <field name="edition_date"/>
                            <field name="isbn"/>
                            <field name="publisher_id"/>
                            <field name="rental_ids"/>
<!--                            <field name="copy_ids"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_book_filter" model="ir.ui.view">
            <field name="name">library.book.search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search string="session">
                    <field name="name"/>
                    <field name="edition_date"/>
                    <group expand="0" string="Group By">
                        <filter string="Instructor" name="instructor" domain="[]" context="{'group_by': 'name'}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'edition_date'}"/>
                        <filter string="Taken Seats" name="taken_seats_filter" domain="[]" context="{'group_by': 'isbn'}"/>
                    </group>
                </search>
            </field>
        </record>



        <record id="open_view_book_list" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="view_book_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new book
                </p>
            </field>
        </record>

        <menuitem
            id="menu_book_main"
            name="Book"
            parent="menu_open_library_root"
            groups="base.group_user"
            sequence="0"/>

            <menuitem
                id="menu_view_book"
                name="Book"
                action="open_view_book_list"
                parent="menu_book_main"
                sequence="0"/>


    </data>
</odoo>