<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="price_rent" model="library.price">
            <field name="name">Day fee</field>
            <field name="duration">1</field>
            <field name="price">0.2</field>
            <field name="type">time</field>
        </record>

        <record id="price_loss" model="library.price">
            <field name="name">Loss fee</field>
            <field name="price">20</field>
            <field name="type">one</field>
        </record>

    </data>

    <data>
        <record id="debtor_mail_template" model="mail.template">
            <field name="name">Debtor: Default main template</field>
            <field name="model_id" ref="library.model_library_rental"/>
            <field name="subject">${'Debtor: %s' % object.name}</field>
            <field name="email_from">${('%s' % object.customer_id.name)|safe}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Deer ${object.customer_id.name}!<br/><br/>
                        You forgot to return such books:
                    </p>
                </div>
                <div>
                    <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                        <tr style="font-weight:bold;">
                            <td>Book</td>
                            <td>Returned Date</td>
                        </tr>
                        % for rental in object.customer_id.rental_ids:
                            <tr>
                                <td>${rental.name}</td>
                                <td>${rental.return_date}</td>
                            </tr>
                        % endfor
                    </table>
                </div>
            </field>

            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="False"/>
        </record>

    </data>
</odoo>
