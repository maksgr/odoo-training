<?xml version="1.0"?>
<odoo>

    <act_window id="add_attendees_lost_action"
                name="Add Attendees"
                binding_model="res.partner"
                binding_views="list"
                res_model="add.attendees.wizard"
                view_mode="form" target="new"/>

        <!-- wizard view -->
        <record id="add_attendees_wizard_form" model="ir.ui.view">
            <field name="name">add.attendees.form.wizard</field>
            <field name="model">add.attendees.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Attendees">
                    <sheet>
                        <group>
                            <field name="session_id"/>
                        </group>
                        <group>
                            <field name="attendee_ids">
                                <field name="name"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="instructor"/>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Subscribe" name="subscribe_attendee" type="object" class="send_and_print btn-primary o_mail_send"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

</odoo>
