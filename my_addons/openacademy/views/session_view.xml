<?xml version="1.0"?>
<odoo>

    <record id="view_session_tree" model="ir.ui.view">
        <field name="name">session.tree</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <tree string="Session">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration"/>
                <field name="instructor_id"/>
                <field name="course_id"/>
                <field name="attendee_ids"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_session_form" model="ir.ui.view">
        <field name="name">session.form</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <form string="Session">
                <header>
                    <button name="button_draft" string="Reset to Draft" type="object"
                            attrs="{'invisible' : [('state', '==', 'draft')]}"/>
                    <button name="button_confirm" string="Confirm" type="object"
                            attrs="{'invisible' : [('state', 'in', ('confirmed', 'done'))]}"/>
                    <button name="button_done" string="Mark as Done" type="object"
                            attrs="{'invisible' : [('state', 'in', ('done', 'draft'))]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="active" invisible="1"/>
                    <group col="4">
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="duration"/> <!-- widget="float_time" -->
                        <field name="instructor_id" domain="[('instructor','=',True)]"/>
                        <field name="course_id"/>
                        <field name="attendee_ids" widget="many2many_tags"/>

                        <field name="seats"/>
                        <field name="taken_seats" widget="progressbar"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

     <record id="view_session_filter" model="ir.ui.view">
        <field name="name">session.search</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <search string="session">
                <field name="name"/>
                <field name="start_date"/>
                <filter name="end_date"/>
                <group expand="0" string="Group By">
                    <filter string="Instructor" name="instructor" domain="[]" context="{'group_by': 'instructor_id'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Taken Seats" name="taken_seats_filter" domain="[]" context="{'group_by': 'taken_seats'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="open_view_session_list" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">session</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_session_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new session
            </p>
        </field>
    </record>

    <record id="session_action_tree" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">session</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

</odoo>